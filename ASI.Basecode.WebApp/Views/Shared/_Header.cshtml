@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<header class="@((ViewBag.LoginView == true) ? "hide-navbar" : "")">
    <div class="logosec">
        <div class="hover-pointer">
            <img src="~/img/logo.png"
                 style="width: 100%;" alt="logo"
                 onclick="window.location.href = '@Url.Action("Index", "Home")';">

        </div>
        <span class="logoText">ADMIN DASHBOARD</span>
    </div>
    <div class="logosec">
        <div class="nameText">@HttpContextAccessor.HttpContext.Session.GetString("UserName")</div>
        <div class="mr-20 hover-pointer" style="position: relative">
            <div class="dp">
                <img src="~/img/profile-logo.png"
                     class="dpicn hover-pointer"
                     alt="dp">
            </div>
            <div class="dropdown">
                <ul>
                    <li>
                        <i class="fa-solid fa-gear"></i>
                        <a href="#">Settings</a>
                    </li>
                    <li>
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <a asp-action="SignOutUser" asp-controller="Account">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>
